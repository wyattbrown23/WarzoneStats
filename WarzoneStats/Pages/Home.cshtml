@page "/"
@model WarzoneStats.Pages.HomeModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<head>
    <style>
        body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
        }

        .topnav {
            overflow: hidden;
            background-color: #333;
        }

            .topnav a {
                float: left;
                display: block;
                color: #f2f2f2;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
                font-size: 17px;
            }

                .topnav a:hover {
                    background-color: #ddd;
                    color: black;
                }

                .topnav a.active {
                    background-color: #4CAF50;
                    color: white;
                }

            .topnav .icon {
                display: none;
            }

            .topnav.responsive a {
                float: none;
                display: block;
                text-align: left;
            }

        table, th, td {
            border: 1px solid black;
        }
        }
    </style>
</head>

    
    <div class="topnav" id="myTopnav">
        <a href="/" class="active">Home</a>
        <a href="wyattstats" ">Wyatt's Stats</a>
        <a href="austinstats">Austin's Stats</a>
        <a href="stevestats">Steve's Stats</a>
        <a href="samstats">Sam's Stats</a>
        <a href="mattstats">Matt's Stats</a>
        <a href="javascript:void(0);" class="icon" onclick="myFunction()">
            <i class="fa fa-bars"></i>
        </a>
    </div>

    <h1>Find User's Stats</h1>
    <form form asp-page-handler="GetUserStat" method="post">
        <fieldset>
            <legend>Search User</legend>
            <div>
                <label name="userName">User Name:</label>
                <input type="text" name="userName" />
                <p>
                    REQUIRED:
                    You must replace # by %2523
                </p>
            </div>
            <div>
                <label name="platform">Platform:</label>
                <input type="text" name="platform"/>
                <p>
                    REQUIRED:
                    <ul>
                        <li>psn</li>
                        <li>steam</li>
                        <li>xbl</li>
                        <li>battle</li>
                        <li>uno (Activision ID)</li>
                        <li>acti (Activision Tag)</li>
                    </ul>
                </p>
            </div>
            <div>
                <button type="submit" class="btn btn-primary">Find User Stats</button>
            </div>
        </fieldset>
    </form>

    
