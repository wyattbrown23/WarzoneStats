@page "/stevestats"
@model WarzoneStats.Pages.SteveStatsPageModel
@{
    Layout = null;
}

<head>
    <style>
        body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
        }

        .topnav {
            overflow: hidden;
            background-color: #333;
        }

            .topnav a {
                float: left;
                display: block;
                color: #f2f2f2;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
                font-size: 17px;
            }

                .topnav a:hover {
                    background-color: #ddd;
                    color: black;
                }

                .topnav a.active {
                    background-color: #4CAF50;
                    color: white;
                }

            .topnav .icon {
                display: none;
            }

            .topnav.responsive a {
                float: none;
                display: block;
                text-align: left;
            }

        table, th, td {
            border: 1px solid black;
        }
        }
    </style>
</head>


<div class="topnav" id="myTopnav">
    <a href="/" class="active">Home</a>
    <a href="wyattstats" ">Wyatt's Stats</a>
    <a href="austinstats">Austin's Stats</a>
    <a href="stevestats">Steve's Stats</a>
    <a href="samstats">Sam's Stats</a>
    <a href="mattstats">Matt's Stats</a>
    <a href="javascript:void(0);" class="icon" onclick="myFunction()">
        <i class="fa fa-bars"></i>
    </a>
</div>

<h1>Steve's Statisitcs:</h1>
@if(Model.SteveStatResult.br == null)
{
    <h2>User's stats are currently private</h2>
}
else
{
    <table>
        <tr>
            <td>Wins</td>
            <td>Kills</td>
            <td>K/D Ratio</td>
            <td>Downs</td>
            <td>Top Ten</td>
            <td>Contracts</td>
            <td>Revives</td>
            <td>Score</td>
            <td>Deaths</td>
        </tr>
        <tr>
            <td>@Model.SteveStatResult.br.wins</td>
            <td>@Model.SteveStatResult.br.kills</td>
            <td>@Model.SteveStatResult.br.kdRatio</td>
            <td>@Model.SteveStatResult.br.downs</td>
            <td>@Model.SteveStatResult.br.topTen</td>
            <td>@Model.SteveStatResult.br.contracts</td>
            <td>@Model.SteveStatResult.br.revives</td>
            <td>@Model.SteveStatResult.br.score</td>
            <td>@Model.SteveStatResult.br.deaths</td>
        </tr>
    </table>
}
